---
import Github from "../../assets/icons/DeviconGithub.astro";
import Linkedin from "../../assets/icons/BiLinkedin.astro";
import Download from "../../assets/icons/Download.astro";
import CV from "../../assets/files/CV-AgustinTeran.pdf";


interface Props {
  lang: string;
}

const { lang } = Astro.props;
---

<div class="flex flex-col items-center justify-center h-[60vh] max-h-[800px]" id="about">
  <h1 class="text-5xl font-bold mt-32 text-center md:text-6xl">Agustín José Terán</h1>
  <h2 class="font-light text-2xl mt-2 opacity-80">{lang === "es"? "Desarrollador Full Stack" : "Full Stack Developer"}</h2>
  <div class="flex gap-5 items-center mt-10">  
      <a class="hover:text-orange-500 hover:border-orange-500" href="https://www.linkedin.com/in/agust%C3%ADn-jos%C3%A9-ter%C3%A1n-41aa64244/" target={"_blank"}>
        <Linkedin class="h-7 w-7"/>
      </a>
      <a class="py-2 px-3 border-[1.8px] text-2xl flex gap-1 rounded-lg hover:text-orange-500 hover:border-orange-500" href={CV} download>
        <Download class="h-7 w-7 delay-0"/>
        {lang === "es"? "Descargar CV" : "Download CV"}</a>
      <a class="hover:text-orange-500 hover:border-orange-500" href="https://github.com/AgustinTeran" target={"_blank"}>
        <Github class="h-7 w-7"/>
      </a>
  </div>
